{
  "name": "node-rest-template",
  "version": "2.0.0",
  "description": "Basic REST service template",
  "scripts": {
    "serve": "nodemon dist/main.js",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "watch": "tsc -w",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k \"npm run watch\" \"npm run serve-debug\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --watch",
    "fs-serve": "nodemon dist/fs-main.js",
    "fs-serve-debug": "nodemon --inspect dist/fs-main.js",
    "fs-watch-debug": "concurrently -k \"npm run watch\" \"npm run fs-serve-debug\""
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.28",
    "moment": "^2.29.1",
    "mongodb": "^3.6.3",
    "pg": "^8.5.1",
    "randomstring": "^1.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/mime-types": "^2.1.0",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.21",
    "@types/pg": "^7.14.8",
    "@types/randomstring": "^1.1.6",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "jest": "^26.6.3",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com:marco-meini/nodejs-typescript-be.git"
  },
  "author": "Marco Meini",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marco-meini/nodejs-typescript-be/issues"
  },
  "homepage": "https://github.com/marco-meini/nodejs-typescript-be#README"
}
